<% include head %>

<div>
    <a href="/newpost">Create New Post</a>
</div>
<section class="blogposts">
    <% for(var i = 0; i < posts.length; i++) { %>
<article>
    <h2><%= posts[i].title %></h2>
    <div>By <%= posts[i].author.fName %> </div>
    <div>
    <%- posts[i].content %>
    </div>
</article>

<% } %>

</section>

<% include footer %>